<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="authMapper">


	<resultMap id="AuthVoResultSet" type="auth">
	    <result column="user_id" property="userId"/>
	    <result column="email" property="email"/>
	    <result column="password" property="password"/>
	    <result column="created_at" property="createdAt"/>
	</resultMap>

    <!-- userId로 회원 조회 -->
    <select id="findByUserId" parameterType="authVo" resultType="authVo">
        SELECT user_id, email, password, created_at
        FROM auth
        WHERE user_id = #{userId};
    </select>

    <!-- 회원가입 -->
    <insert id="insertAuth" parameterType="authVo">
        INSERT INTO auth (user_id, email, password, created_at)
        VALUES (#{userId}, #{email}, #{password}, NOW());
    </insert>



</mapper>